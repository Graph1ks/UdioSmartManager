{
  "manifest_version": 3,
  "name": "Udio Smart Manager",
  "version": "1.0",
  "description": "Browser extension to better manage your prompts, style reduction, lyrics etc.",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.udio.com/create*"],
      "js": ["js/content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/*.json", "css/main.css", "page_context_script.js"],
      "matches": ["*://*.udio.com/*"]
    }
  ]
}
